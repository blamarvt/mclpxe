# do not edit this file, it will be overwritten on update

SUBSYSTEM=="block", SYMLINK{unique}+="block/%M:%m"
SUBSYSTEM!="block", SYMLINK{unique}+="char/%M:%m"

KERNEL=="pty[pqrstuvwxyzabcdef][0123456789abcdef]", GROUP="staff", MODE="0660"
KERNEL=="tty[pqrstuvwxyzabcdef][0123456789abcdef]", GROUP="staff", MODE="0660"
KERNEL=="ptmx",			GROUP="staff", MODE="0666"
KERNEL=="tty",			GROUP="staff", MODE="0666"
KERNEL=="tty[0-9]*",		GROUP="staff", MODE="0620"
KERNEL=="console",		MODE="0600"
KERNEL=="vcs|vcs[0-9]*|vcsa|vcsa[0-9]*", GROUP="staff"

# serial
KERNEL=="tty[A-Z]*[0-9]|pppox[0-9]*|ircomm[0-9]*|noz[0-9]*|rfcomm[0-9]*", GROUP="staff"
KERNEL=="ppp",			MODE="0600"
KERNEL=="mwave",		GROUP="staff"
KERNEL=="hvc*|hvsi*",		GROUP="staff"

# virtio serial / console ports
KERNEL=="vport*", SYMLINK+="virtio-ports/$ATTR{name}"

# mem
KERNEL=="null|zero|full|random|urandom", MODE="0666"
KERNEL=="mem|kmem|port|nvram",	GROUP="staff", MODE="0640"

# input
KERNEL=="mouse*|mice|event*",	MODE="0640"
KERNEL=="ts[0-9]*|uinput",	MODE="0640"
KERNEL=="js[0-9]*",		MODE="0644"

# video4linux
SUBSYSTEM=="video4linux",	GROUP="staff"
KERNEL=="vttuner*",		GROUP="staff"
KERNEL=="vtx*|vbi*",		GROUP="staff"
KERNEL=="winradio*",		GROUP="staff"

# graphics
KERNEL=="agpgart",		MODE="0600", GROUP="staff"
KERNEL=="pmu",			GROUP="staff"
KERNEL=="nvidia*|nvidiactl*",	GROUP="staff"
SUBSYSTEM=="graphics",		GROUP="staff"
SUBSYSTEM=="drm",		GROUP="staff"

# sound
SUBSYSTEM=="sound",		GROUP="staff"
KERNEL=="mixer0",		SYMLINK+="mixer"

# DVB (video)
SUBSYSTEM=="dvb", GROUP="staff"

# FireWire (firewire-core driver: IIDC devices, AV/C devices)
SUBSYSTEM=="firewire", ATTR{units}=="*0x00a02d:0x00010*", GROUP="staff"
SUBSYSTEM=="firewire", ATTR{units}=="*0x00a02d:0x010001*", GROUP="staff"

# FireWire (deprecated dv1394 and video1394 drivers)
KERNEL=="dv1394-[0-9]*",	NAME="dv1394/%n", GROUP="staff"
KERNEL=="video1394-[0-9]*",	NAME="video1394/%n", GROUP="staff"

# libusb device nodes
SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device", MODE="0664"

# printer
KERNEL=="parport[0-9]*",	GROUP="staff"
SUBSYSTEM=="printer",		KERNEL=="lp*", GROUP="staff"
SUBSYSTEM=="ppdev",		GROUP="staff"
SUBSYSTEM=="usb",		KERNEL=="lp*", SYMLINK+="usb%k", GROUP="staff"
KERNEL=="lp[0-9]*",		GROUP="staff"
KERNEL=="irlpt[0-9]*",		GROUP="staff"
# hplip and cups 1.4+ use raw USB devices, so permissions should be similar to
# the ones from the old usblp kernel module
#SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device", ENV{ID_USB_INTERFACES}=="", IMPORT{program}="usb_id --export %p"
SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device", ENV{ID_USB_INTERFACES}==":0701*:", GROUP="staff", MODE="0664"

# block
SUBSYSTEM=="block", GROUP="staff"

# floppy
SUBSYSTEM=="block", KERNEL=="fd[0-9]", GROUP="staff"

# cdrom
SUBSYSTEM=="block", KERNEL=="sr[0-9]*", SYMLINK+="scd%n", GROUP="staff"
SUBSYSTEM=="scsi_generic", SUBSYSTEMS=="scsi", ATTRS{type}=="4|5", GROUP="staff"
KERNEL=="pktcdvd[0-9]*", GROUP="staff"
KERNEL=="pktcdvd", GROUP="staff"

# tape
KERNEL=="ht[0-9]*|nht[0-9]*", GROUP="staff"
KERNEL=="pt[0-9]*|npt[0-9]*|pht[0-9]*", GROUP="staff"
SUBSYSTEM=="scsi_generic|scsi_tape", SUBSYSTEMS=="scsi", ATTRS{type}=="1|8", GROUP="staff"

# block-related
KERNEL=="sch[0-9]*", GROUP="staff"
SUBSYSTEM=="scsi_generic", SUBSYSTEMS=="scsi", ATTRS{type}=="0", GROUP="staff"
KERNEL=="pg[0-9]*", GROUP="staff"
KERNEL=="qft[0-9]*|nqft[0-9]*|zqft[0-9]*|nzqft[0-9]*|rawqft[0-9]*|nrawqft[0-9]*", GROUP="staff"
KERNEL=="rawctl", GROUP="staff"
SUBSYSTEM=="raw", KERNEL=="raw[0-9]*", GROUP="staff"
SUBSYSTEM=="aoe", GROUP="staff", MODE="0220"
SUBSYSTEM=="aoe", KERNEL=="err", MODE="0440"

# network
KERNEL=="tun",			MODE="0666"
KERNEL=="rfkill",		MODE="0644"

# CPU
KERNEL=="cpu[0-9]*",		MODE="0444"

# miscellaneous
KERNEL=="fuse",			MODE="0666"
SUBSYSTEM=="rtc", DRIVERS=="rtc_cmos", SYMLINK+="rtc"
KERNEL=="mmtimer",		MODE="0644"
KERNEL=="rflash[0-9]*",		MODE="0400"
KERNEL=="rrom[0-9]*",		MODE="0400"

# do not delete static device nodes
ACTION=="remove", NAME=="", TEST=="/lib/udev/devices/%k", OPTIONS+="ignore_remove"
ACTION=="remove", NAME=="?*", TEST=="/lib/udev/devices/$name", OPTIONS+="ignore_remove"
